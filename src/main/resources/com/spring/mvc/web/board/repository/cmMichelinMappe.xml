<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace 에는 사용할 인터페이스의 풀 경로(패키지명 포함 인터페이스)를 적는다-->
<mapper namespace="com.spring.mvc.web.board.repository.cmMichelinMapper">

    <!--    댓글 작성-->
    <insert id="cmSave">
        INSERT INTO cm_michelin
        (board_num, cm_writer, cm_content)
        VALUES
        (seq_cmMichelin.nextval, #{cm_writer}, #{cm_content})
    </insert>
    <!-- 댓글 삭제-->
    <delete id="cmRemove">
        DELETE FROM cm_michelin
        WHERE board_num = #{board_num} and cm_num = #{cm_num}
    </delete>

    <!--<resultMap id="boardMap" type="com.spring.mvc.web.board.domain.Board">
        &lt;!&ndash;        property 속성에는 자바 필드명, column 은 테이블 칼럼명&ndash;&gt;
        <result property="boardNo" column="board_no"/>
        <result property="view" column="view_cnt"/>
    </resultMap>-->
</mapper>